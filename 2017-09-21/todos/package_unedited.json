{
  "name": "todos-eslint-webpack-jest",
  "version": "1.0.0",
  "description": "Todos application with ESLint, webpack, and Jest",
  "main": "src/root.js",
  "scripts": {
    "build": "webpack",
    "lint": "eslint --cache src/**/*.js --ignore-pattern src/**/*_unedited*.js",
    "test": "jest"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "4.5.0",
    "jest": "21.1.0",
    "webpack": "3.6.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "jest": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-console": "off",
      "eol-last": "error",
      "indent": [
        "error",
        2
      ]
    }
  }
}
